<%= render "shared/header" %>
<div class=yu_ti>
    <%= @user.nickname %>さんのマイレシピ一覧
</div>
<div class="yumy">
  <div class="yuti">
    <div class="yuimti">
      <div class="yuim">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "recipe-img user_img" %>
        <% else %>
        <% end %>
      </div>
      <div class="pro">
        <div class="frow">
          <h6>フォロワー</h6>
          <div class=frow_in>
            20
          </div>
        </div>
        <div class="fro">
          <h6>フォロー</h6>
          <div class=frow_in>
            20
          </div>
        </div>
        <div class="reciin">
          <h6>レシピ数</h6>
          <div class=frow_in>
          <%= @user.recipes.count %>
          </div>
        </div>
      </div>
    </div>
    <div class="yuname"><%= @user.nickname %>さんの情報</div>
    <ul class="yupul">
      <li>
        <i class="fas fa-user"></i>
        <%= link_to "プロフィール"%>
      </li>
      <li>
        <i class="fab fa-gratipay"></i>
        <%= link_to "フォローする" %>
      </li>
      <li>
        <i class="fas fa-arrow-circle-left"></i>
        <%= link_to "戻る", root_path %>
      </li>
    </ul>
  </div>
  <%= render partial: 'user', locals: { user: @user } %>
</div>
<%= render "shared/footer" %>
