<%= render "shared/header" %>
<div class=yu_ti>
    <%= @user.nickname %>さんのマイレシピ一覧
</div>
<div class="yumy">
  <div class="yuti">
    <div class="yuimti">
      <div class="yuim">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "recipe-img user_img" %>
        <% else %>
        <%= image_tag("default.png", class: "recipe-img user_img") %>
        <% end %>
      </div>
      <div class="pro">
        <%=link_to followers_user_path(@user.id) do %>
          <div class="frow">
            <h6>フォロワー</h6>
            <div class=frow_in>
              <%= @user.followers.count %>
            </div>
          </div>
        <% end %>
        <%= link_to follows_user_path(@user.id) do %>
          <div class="fro">
            <h6>フォロー</h6>
            <div class=frow_in>
              <%= @user.followings.count %>
            </div>
          </div>
        <% end %>
        <div class="reciin">
          <h6>レシピ数</h6>
          <div class=frow_in>
          <%= @user.recipes.count %>
          </div>
        </div>
      </div>
    </div>
    <div class="yuname"><%= @user.nickname %>さんの情報</div>
    <ul class="yupul">
      <li>
        <i class="fas fa-user"></i>
        <%= link_to "プロフィール"%>
      </li>
      <li>
        <i class="fas fa-arrow-circle-left"></i>
        <%= link_to "戻る", root_path %>
      </li>
    </ul>
  </div>
  <%= render partial: 'user', locals: { user: @user } %>
</div>
<%= render "shared/footer" %>
