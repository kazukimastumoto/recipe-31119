<header class="input_box_body">
  <div class="he">
    <%= link_to("/") do %>
      <div class="logo">
        <%= "LOGO" %>
      </div>
    <% end %>
    <%= form_with(url: search_recipes_path, local: true, method: :get, class: "search-form") do |f| %>
      <div class="input-box">
      <%= f.text_field :keyword, placeholder:'キーワードから探す', class:"seach_text" %>
      </div>
      <%= f.submit "検索", class: "search-btn" %>
    <% end %>
    <div class="header_if">
      <% if user_signed_in? %>
        <%= link_to(notifications_path,method: :get) do %>
          <% if unchecked_notifications.any? %>
          <div class="tsuchi">
            <span class="fa-layers fa-fw">
              <span class="fas fa-bell"></span>
              <span class="fas fa-circle"></span>
            </span>
          </div>
          <% else %>
          <div class="tsuchi">
              <i class="fas fa-bell"></i>
          </div>
          <% end %>
        <% end %>
        <%= link_to(destroy_user_session_path,method: :delete) do %>
          <div class="rgout">
            <p>ログアウト</p>
          </div>
        <% end %>
        <% else %>
        <%=link_to(new_user_registration_path) do %>
          <div class="kinto">
            <p>会員登録</p>
          </div>
        <% end %>
        <%= link_to(new_user_session_path) do %>
          <div class="rgin">
            <p>ログイン</p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</header>
